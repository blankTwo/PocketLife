/* 全局样式 - 电子宠物小程序 UI 重构 */

/* ==================== CSS 变量定义 ==================== */
page {
  /* 主色调 */
  --primary: #3B82F6;
  --primary-light: #60A5FA;
  --primary-dark: #2563EB;
  
  /* CTA 色 */
  --cta: #F97316;
  --cta-hover: #EA580C;
  
  /* 状态色 */
  --status-good: #10B981;
  --status-normal: #F59E0B;
  --status-danger: #EF4444;
  
  /* 背景色 - Claymorphism 风格 */
  --bg-primary: #F8FAFC;
  --bg-secondary: #F1F5F9;
  --bg-card: #FFFFFF;
  
  /* 文字色 */
  --text-primary: #1E293B;
  --text-secondary: #64748B;
  --text-muted: #94A3B8;
  
  /* Claymorphism 特有色 */
  --clay-peach: #FDBCB4;
  --clay-blue: #ADD8E6;
  --clay-mint: #98FF98;
  --clay-lilac: #E6E6FA;
  
  /* 阴影色 */
  --shadow-light: rgba(0, 0, 0, 0.05);
  --shadow-medium: rgba(0, 0, 0, 0.1);
  --shadow-dark: rgba(0, 0, 0, 0.15);
  
  /* 字体族 */
  --font-heading: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  --font-body: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  
  /* 字号 */
  --text-xs: 24rpx;
  --text-sm: 26rpx;
  --text-base: 28rpx;
  --text-lg: 32rpx;
  --text-xl: 36rpx;
  --text-2xl: 44rpx;
  --text-3xl: 52rpx;
  --text-4xl: 60rpx;
  
  /* 字重 */
  --font-light: 300;
  --font-normal: 400;
  --font-medium: 500;
  --font-semibold: 600;
  --font-bold: 700;
  
  /* 行高 */
  --leading-tight: 1.25;
  --leading-normal: 1.5;
  --leading-relaxed: 1.75;
  
  /* 间距系统 - 8rpx 基准 */
  --space-1: 8rpx;
  --space-2: 16rpx;
  --space-3: 24rpx;
  --space-4: 32rpx;
  --space-5: 40rpx;
  --space-6: 48rpx;
  --space-8: 64rpx;
  --space-10: 80rpx;
  --space-12: 96rpx;
  --space-16: 128rpx;
  --space-20: 160rpx;
  
  /* 圆角系统 */
  --radius-sm: 12rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;
  --radius-2xl: 40rpx;
  --radius-full: 9999rpx;
  
  /* 动画时长 */
  --transition-fast: 150ms;
  --transition-base: 200ms;
  --transition-slow: 300ms;
  
  /* 缓动函数 */
  --ease-out: cubic-bezier(0, 0, 0.2, 1);
  --ease-in: cubic-bezier(0.4, 0, 1, 1);
  --ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);
}

/* ==================== 全局基础样式 ==================== */
page {
  background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
  font-family: var(--font-body);
  font-size: var(--text-base);
  line-height: var(--leading-normal);
  color: var(--text-primary);
  min-height: 100vh;
}

/* ==================== Claymorphism 阴影系统 ==================== */
.shadow-clay-sm {
  box-shadow: 
    inset 2rpx 2rpx 4rpx rgba(255, 255, 255, 0.8),
    inset -2rpx -2rpx 4rpx rgba(0, 0, 0, 0.05),
    4rpx 4rpx 8rpx rgba(0, 0, 0, 0.08);
}

.shadow-clay-md {
  box-shadow: 
    inset 3rpx 3rpx 6rpx rgba(255, 255, 255, 0.8),
    inset -3rpx -3rpx 6rpx rgba(0, 0, 0, 0.05),
    6rpx 6rpx 12rpx rgba(0, 0, 0, 0.1);
}

.shadow-clay-lg {
  box-shadow: 
    inset 4rpx 4rpx 8rpx rgba(255, 255, 255, 0.8),
    inset -4rpx -4rpx 8rpx rgba(0, 0, 0, 0.05),
    8rpx 8rpx 16rpx rgba(0, 0, 0, 0.12);
}

.shadow-clay-pressed {
  box-shadow: 
    inset 4rpx 4rpx 8rpx rgba(0, 0, 0, 0.1),
    inset -4rpx -4rpx 8rpx rgba(255, 255, 255, 0.5);
}

/* ==================== 通用工具类 ==================== */

/* 文字工具类 */
.text-primary { color: var(--text-primary); }
.text-secondary { color: var(--text-secondary); }
.text-muted { color: var(--text-muted); }

.font-heading { font-family: var(--font-heading); }
.font-body { font-family: var(--font-body); }

.font-light { font-weight: var(--font-light); }
.font-normal { font-weight: var(--font-normal); }
.font-medium { font-weight: var(--font-medium); }
.font-semibold { font-weight: var(--font-semibold); }
.font-bold { font-weight: var(--font-bold); }

/* 间距工具类 */
.p-4 { padding: var(--space-4); }
.p-6 { padding: var(--space-6); }
.p-8 { padding: var(--space-8); }

.m-4 { margin: var(--space-4); }
.m-6 { margin: var(--space-6); }
.m-8 { margin: var(--space-8); }

/* 圆角工具类 */
.rounded-md { border-radius: var(--radius-md); }
.rounded-lg { border-radius: var(--radius-lg); }
.rounded-xl { border-radius: var(--radius-xl); }
.rounded-full { border-radius: var(--radius-full); }

/* ==================== 动画工具类 ==================== */

/* 淡入动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.fade-in {
  animation: fadeIn var(--transition-base) var(--ease-out);
}

/* 从下方滑入 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.slide-in-up {
  animation: slideInUp var(--transition-slow) var(--ease-out);
}

/* 交错动画延迟 - 用于列表项依次出现 */
.slide-in-up:nth-child(1) { animation-delay: 0ms; }
.slide-in-up:nth-child(2) { animation-delay: 50ms; }
.slide-in-up:nth-child(3) { animation-delay: 100ms; }
.slide-in-up:nth-child(4) { animation-delay: 150ms; }
.slide-in-up:nth-child(5) { animation-delay: 200ms; }

/* 弹性缩放动画 */
@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale(0.9);
  }
  50% {
    transform: scale(1.02);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.bounce-in {
  animation: bounceIn var(--transition-slow) var(--ease-out);
}

/* 脉冲动画 */
@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

.pulse {
  animation: pulse 2s var(--ease-in-out) infinite;
}

/* 旋转动画 */
@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.spin {
  animation: spin 1s linear infinite;
}

/* ==================== 通用按钮样式（保留兼容性）==================== */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-5) var(--space-8);
  border-radius: var(--radius-lg);
  font-size: var(--text-base);
  font-weight: var(--font-medium);
  transition: all var(--transition-base) var(--ease-out);
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
  color: #FFFFFF;
  box-shadow: 
    inset 2rpx 2rpx 4rpx rgba(255, 255, 255, 0.3),
    4rpx 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 
    inset 4rpx 4rpx 8rpx rgba(0, 0, 0, 0.1),
    inset -2rpx -2rpx 4rpx rgba(255, 255, 255, 0.3);
}

.btn-disabled {
  background-color: var(--bg-secondary);
  color: var(--text-muted);
  opacity: 0.5;
  pointer-events: none;
}
